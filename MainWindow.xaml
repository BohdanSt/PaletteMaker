<Window x:Class="PalleteMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PalleteMaker"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image x:Name="imageControl" Grid.ColumnSpan="2" />

        <Image x:Name="imagePallete" Grid.Row="1" />

        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1">
            <DockPanel Margin="10">
                <TextBox x:Name="textBoxClustersCount" Width="50" DockPanel.Dock="Left"/>
                <TextBlock Text="Clusters count" Margin="10 0 0 0" DockPanel.Dock="Right"/>
            </DockPanel>
            <Button x:Name="buttonOpenImage" Content="Open image" Click="buttonOpenImage_Click" Margin="10"/>
            <Button x:Name="buttonGeneratePallete" Content="Generate Pallete" Click="buttonGeneratePallete_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
